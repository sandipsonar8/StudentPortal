@{
}

@model List<StudentPortal.Web.Models.Entities.Student>

<style>
    .round {
        border: 1px solid black;
        border-radius: 10px;
    }
</style>

<h1>Students</h1>

<div class="round">    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>
                        <a class="btn btn-dark" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>